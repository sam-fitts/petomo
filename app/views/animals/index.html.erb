<% @animals.each do |x| %>

    <div class="d-md-flex flex-md-equal w-100 my-md-3 pl-md-3">
      <div class="bg-dark mr-md-3 pt-3 px-3 pt-md-5 px-md-5 text-center text-white overflow-hidden">
        <div class="my-3 py-3">
          <h2 class="display-5"><%= x.name %></h2>
          <p class="lead"><%= x.animal_type %></p>
        </div>
        <div class="mx-auto" style="width: 80%; height: 300px; border-radius: 21px 21px 0 0;"><%= image_tag x.pictures %></div>
      </div>
    </div>

<% end %>

