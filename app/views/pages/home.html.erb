  <body>

    <div class="d-md-flex flex-md-equal w-100 my-md-3 pl-md-3">
      <div class="mr-md-3 pt-3 px-3 pt-md-5 px-md-5 text-center overflow-hidden">
        <div class="my-3 py-3">
          <h1 class="display-5">Foster a pet for a trial period with Petomo!</h2>
          <p class="lead">&nbsp;</p>
          <%= form_tag root_path, method: :get do %>
        <div class="styled-select">
          <ul>
            <li><%= select_tag :state, options_for_select(@users.pluck(:state).uniq), include_blank: "(1) Select Your State"%></li>
            <br><br>
            <li><%= select_tag :city, options_for_select(@users.pluck(:city).uniq), include_blank: "(2) Select City"%></li>
            <br><br>
            <li><%= select_tag :address, options_for_select(@users.pluck(:address).uniq), include_blank: "(3) Select Address"%></li>
            <br><br>
                <%= button_tag(type: "submit") do %>
                  <%= content_tag(:strong, 'Find a Friend!') %>
                <% end %>
          </ul>
        </div>
        <% end %>
        </div>

      </div>
    <div id="map-div">
      <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d25942.46394116102!2d139.7013585!3d35.6324597!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sen!2sjp!4v1519714788442" width="100%" height="700px" frameborder="0" style="border:0" allowfullscreen></iframe>
    </div>
  </div>
</body>
